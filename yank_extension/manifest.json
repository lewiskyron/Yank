{
	"manifest_version": 3,
	"name": "Yank",
	"description": "Create Flashcards at the speed of light",
	"version": "1.0",
	"icons": {
		"16": "highlighter.png",
		"48": "highlighter.png",
		"128": "highlighter.png",
		"256": "highlighter.png"
	},
	"action": {
		"default_popup": "index.html",
		"default_title": "Yank",
		"default_icon": {
			"16": "highlighter.png",
			"24": "highlighter.png",
			"32": "highlighter.png"
		}
	},
	"content_scripts": [
		{
			"js": ["src/chrome-services/utils/content.ts"],
			"matches": ["https://*/*"]
		}
	],
	"background": {
		"service_worker": "src/chrome-services/utils/background.ts",
		"type": "module"
	},
	"web_accessible_resources": [
		{
			"matches": ["https://*/*"],
			"resources": ["assets/*"]
		}
	],

	"permissions": ["bookmarks", "storage", "identity", "tabs"],
	"oauth2": {
    "client_id": "967346537744-g8vumrkstbab9ggondnuq1g4qmpepd11.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
	"key": ""
}
